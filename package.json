{
  "name": "praktikum-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "dev": "vite",
    "start": "npm run build && vite preview",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && eslint . && stylelint \"**/*.{css,scss}\"",
    "lint:fix": "eslint --fix . && stylelint --fix \"**/*.{css,scss}\"",
    "lint:css": "stylelint \"**/*.{css,scss,sass,styl,less,pcss}\"",
    "lint:css-fix": "stylelint --fix \"**/*.{css,scss}\""
  },
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-handlebars": "^2.0.0"
  }
}
